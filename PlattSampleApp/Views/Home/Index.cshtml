@{
    ViewBag.Title = "Home Page";
}

@*
    For all of the views, typically I would return another view if an error was returned by the server.
    
    I was instructed not to modify the views via javascript, so nothing has been done, so errors are being returned by 

    the server directly to the client currently.
    *@

<h3>Platt Code Sample - Star Wars App</h3>
<div class="row-spacer">
    <div class="row">
        <div class="col-md-12">
            <div class="btn btn-default">
                @Html.ActionLink("See Results", "GetAllPlanets", "Home")
            </div>
            <span>Get All Planets - Largest Diameter to Smallest Diameter</span>
        </div>
    </div>

</div>

<div class="row-spacer">
    <div class="row">
        <div class="col-md-12">
            <div class="btn btn-default">
                @Html.ActionLink("See Results", "GetPlanetTwentyTwo", "Home", new {planetid = "22"}, null)
            </div>
            <span>Get Details for Planet 22</span>
        </div>
    </div>
</div>

<div class="row-spacer">
    <div class="row">
        <div class="col-md-12">
            <div class="btn btn-default">
                @Html.ActionLink("See Results", "GetResidentsOfPlanetNaboo", "Home", new {planetname = "Naboo"}, null)
            </div>
            <span>Get Residents of Planet Naboo</span>
        </div>
    </div>  
</div>

<div class="row-spacer">
    <div class="row">
        <div class="col-md-12">
            <div class="btn btn-default">
                @Html.ActionLink("See Results", "VehicleSummary", "Home")
            </div>
            <span>Vehicle Manufacturer Summary</span>
        </div>
    </div> 
</div>

<div class="row-spacer">
    <div class="row">
        <div class="col-md-12">
            <div class="btn btn-default">
                @Html.ActionLink("See Results", "GetHanSolo", "Home")
            </div>
            <span>Get The Legend Himself, as played by the great Harrison Ford</span>
        </div>
    </div>
</div>
